{
  "extends": "eslint",
  "parserOptions": { "ecmaVersion": 5 },
  "env": {
    "browser": true,
    "node": true
  },
  "rules": {
    "indent": [1, 2],
    "quotes": [1, "single"],
    "no-underscore-dangle": 0,
    "no-unused-vars": [2, { "vars": "all", "args": "after-used", "caughtErrors": "all", "caughtErrorsIgnorePattern": "^ignore" }],
    "one-var": [2, "never"],
    "require-jsdoc": 0,
    "space-before-function-paren": [1, {"anonymous": "always", "named": "never"}],
    "strict": [1, "function"]
  }
}
